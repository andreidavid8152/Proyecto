@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="text-center">

    <h1>Login</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post">

        <div class="form-group mb-5 mt-4">
            <label>Username</label>
            <input asp-for="Username" class="form-control mt-2 placeholder-black" placeholder="Ingrese un nombre">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label>Password</label>
            <input type="password" asp-for="Password" class="form-control mt-2 placeholder-black" placeholder="Ingrese una contraseña">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <a asp-action="Register" class="text-success">Crear una cuenta</a>
        </div>

        <button type="submit" class="btn btn-success">Ingresar</button>

    </form>

</div>

<style>
    .validation-summary-errors ul {
        list-style-type: none;
        padding-left: 0;
    }
</style>
