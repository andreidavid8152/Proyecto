@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="text-center" style="padding: 50px 0;">

    <h1 class="mb-4" style="color: #333;">Bienvenido</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">

        <div class="form-group mb-4">
            <label style="color:#55677D">Nombre de usuario</label>
            <input asp-for="Username" class="form-control mt-2" placeholder="Tu nombre aquí">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label style="color:#55677D">Contraseña</label>
            <input type="password" asp-for="Password" class="form-control mt-2" placeholder="Tu contraseña aquí">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })

        <div class="mb-3">
            <a asp-action="Register" class="text-success">¿Nuevo aquí? Crea una cuenta</a>
        </div>

        <button type="submit" class="btn btn-outline-info w-100">Entrar</button>

    </form>

</div>

<style>
    .validation-summary-errors ul {
        list-style-type: none;
        padding-left: 0;
    }
</style>
