@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="text-center">

    <h1>Register</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post">

        <div class="form-group mb-5 mt-4">
            <label>Nombre</label>
            <input asp-for="Nombre" class="form-control mt-2 placeholder-black" placeholder="Ingrese un nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-5 mt-4">
            <label>Email</label>
            <input asp-for="Email" class="form-control mt-2 placeholder-black" placeholder="Ingrese un email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-5 mt-4">
            <label>Username</label>
            <input asp-for="Username" class="form-control mt-2 placeholder-black" placeholder="Ingrese un nombre de usuario">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-5">
            <label>Password</label>
            <input type="password" asp-for="Password" class="form-control mt-2 placeholder-black" placeholder="Ingrese una contraseña">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <button type="submit" class="btn btn-success">Registrarme</button>

    </form>

</div>

<style>
    .validation-summary-errors ul {
        list-style-type: none;
        padding-left: 0;
    }
</style>
