@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <!-- Header -->
    <div class="text-center my-5">
        <img src="/images/logo.png" alt="Logo" style="width: 200px;">
    </div>

    <!-- Hero Section -->
    <div class="row">
        <div class="col-lg-6">
            <h1>Bienvenido a Spot!</h1>
            <p>El mejor lugar para encontrar el local perfecto para tu negocio.</p>
            <a href="#features" class="btn btn-primary">Conoce más</a>
        </div>
        <div class="col-lg-6">
            <img src="/images/hero-image.jpg" alt="Locales" class="img-fluid">
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center my-5" id="features">
        <div class="col-lg-4">
            <i class="bi bi-building"></i>
            <h3>Versatilidad</h3>
            <p>Locales de todos los tamaños y para todos los rubros.</p>
        </div>
        <div class="col-lg-4">
            <i class="bi bi-geo-alt"></i>
            <h3>Ubicación</h3>
            <p>Encuentra el local perfecto en la ubicación que más te convenga.</p>
        </div>
        <div class="col-lg-4">
            <i class="bi bi-cash-coin"></i>
            <h3>Precio</h3>
            <p>Opciones para todos los presupuestos.</p>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="row my-5">
        <div class="col-lg-12 text-center">
            <h2>Contacta con nosotros</h2>
            <p>¿Tienes alguna pregunta? Estamos aquí para ayudarte.</p>
            <a href="mailto:info@spot.com" class="btn btn-secondary">Envíanos un correo</a>
        </div>
    </div>

</div>
